@model foodoProject.Models.Product

@{
    ViewBag.Title = "Ekle";
}

<h2>Add New Product</h2>

@using (Html.BeginForm("Ekle", "Product", FormMethod.Post))
{
    <div class="form-group">
        <label for="PName">Name:</label>
        @Html.TextBoxFor(model => model.PName, new { @class = "form-control", placeholder = "Enter Product Name" })
    </div>
    <div class="form-group">
        <label for="PDescription">Description:</label>
        @Html.TextBoxFor(model => model.PDescription, new { @class = "form-control", placeholder = "Enter Description" })
    </div>
    <div class="form-group">
        <label for="Price">Price:</label>
        @Html.TextBoxFor(model => model.Price, new { @class = "form-control", placeholder = "Enter Price" })
    </div>
    <div class="form-group">
        <label for="CategoryID">Category:</label>
        @Html.DropDownListFor(model => model.CategoryID, (SelectList)ViewBag.Categories, "Select Category", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="RestaurantID">Restaurant:</label>
        @Html.DropDownListFor(model => model.RestaurantID, (SelectList)ViewBag.Restaurants, "Select Restaurant", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="PImage">Image URL:</label>
        @Html.TextBoxFor(model => model.PImage, new { @class = "form-control", placeholder = "Enter Image URL" })
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-success" />
        <a href="/Restaurant/Index" class="btn btn-info">Cancel</a>
    </div>
}
